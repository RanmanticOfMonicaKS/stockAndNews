<style>
    html,
    body {
        background-color: #010646;
    }
    main {
        padding: 0;
    }
    .sl_header>.center {
        width: 100%;
        position: absolute;
        left: 50%;
        transform: translate(-50%, 0);
        text-align: center;
        font-size: 18px;
    }

    .center>span.fa {
        position: absolute;
        top: 50%;
        right: 30px;
        transform: translate(0, -50%);
        color: #639EFA;
    }

    .news_default_search {
        position: -webkit-sticky;
        position: sticky;
        top: 0;
        margin: 10px auto;
        text-align: center;
        margin-bottom: 10px;
        background-color: #010646;
    }

    .sl_search {
        display: inline-block;
        width: 90%;
        height: 30px;
        border: 2px solid #fff;
        border-radius: 25px;
    }

    .news_default_search span {
        position: absolute;
        height: 30px;
        width: 30px;
        top: 0;
        left: 20px;
        font-size: 22px;
        padding-top: 4px;
        color: #666;
    }

    /* 股票数据部分*/
    .stock_indicate {
        background-color: #010646;
    }
    .stock_indicate >span {
        display: inline-block;
        width: 19%;
        text-align: center;
        height: 30px;
        line-height: 30px;
    }
    .stock_indicate >span.first {
        color:#010646;
    }

    .stcok_content {
        padding: 0 10px;
    }
    .stock_item {
        display:-webkit-box;
        display: -webkit-flex;
        display: flex;
        background-color: #111453;
        height: 80px;
        line-height: 80px;
        border-bottom: 3px solid #26326C;
    }
    .stock_item li {
        width: 20%;
        text-align: center;
    }
    .stock_item >li:nth-child(1) {
        line-height: 40px;
    }
</style>

