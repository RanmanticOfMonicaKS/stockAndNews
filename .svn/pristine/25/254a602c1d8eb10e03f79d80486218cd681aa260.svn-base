<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <link rel="stylesheet" href="../css/api.css">
    <link rel="stylesheet" href="../css/aui.css">
    <link rel="stylesheet" href="../css/font-awesome.min.css">
    <link rel="stylesheet" href="../css/sl_common.css">
    <title>登录页</title>
    <style>
        .sl_sign_content {
            position: absolute;
            top: 20%;
            left: 0;
            height: 60%;
            width: 80%;
            margin-left: 10%;
        }

        .sl_sign_content .sl_logo {
            width: 100px;
            height: 100px;
            margin: 0 auto;
            background: url('../image/sl_logo.png');
            background-size: 100px 100px;
            margin-bottom: 20px;
        }

        .sl_welcome {
            margin-bottom: 50px;
        }

        .sl_welcome .sl_welcome_title {
            color: transparent;
            background-image: linear-gradient(90deg, #fccb90 0%, #d57eeb 100%);
            background-clip: text;
            -webkit-background-clip: text;
        }

        .sl_welcome .sl_welcome_con {
            font-size: 18px;

        }

        .sign_box {
            margin-bottom: 50px;
        }

        .sign_box li {
            clear: both;
            position: relative;
            border-bottom: 1px solid #aaa;
            margin-bottom: 20px;
            height: 2.2rem;
        }

        .sign_box li input {
            width: 200px;
        }

        .sign_box li>label {
            display: block;
            height: 2.2rem;
            line-height: 2.2rem;
            color: #424242;
            font-size: 20px;
        }

        .sign_box li>input,
        .sign_box li>label {
            float: left;
        }

        .sign_box li.last {
            border: 0;
            padding: 10px;
        }

        .sign_btn {
            width: 80%;
            margin: 0 auto;

        }

        /* 错误提示 */
        .err_box {
            float: right;
            color:red;
            width: 100%;
            display: none;
        }
/*         .err_box > i {
            display: inline-block;
            width: 10px;
            height: 10px;
        } */
        main {
            background-color: #fff;
        }
        .sl_welcome {
            color:#000;
        }
        .last {
            color:#3a4a5a;
        }
    </style>

</head>

<body>
    <div class="sl_sign_content">
        <div class="sl_logo"></div>
        <div class="sl_welcome">
            <div class="sl_welcome_title">Hi</div>
            <div class="sl_welcome_con">欢迎来到双利股票，请登录...</div>
        </div>
        <ul class="sign_box">
            <li class="sl_uname">
                <label for="sl_uname">手机号: &nbsp;</label><input type="number" name="sl_uname" id="sl_uname"
                    placeholder="请输入手机号">
                    <div class="err_box uname">
                        <i class="fa fa-exclamation-triangle"></i>
                        <span class="err_box_msg"></span>
                    </div>
            </li>
            <li class="sl_upwd">
                <label for="sl_upwd">密码：&nbsp;&nbsp;&nbsp;</label>
                <input type="password" name="sl_upwd" id="sl_upwd" placeholder="请输入密码">
                <div class="err_box upwd">
                    <i class="fa fa-exclamation-triangle"></i>
                    <span class="err_box_msg"></span>
                </div>
            </li>
            <li class="last">
                <span class="aui-pull-left" tapmode onclick="yzmSign();">验证码登录</span><span class="aui-pull-right" tapmode onclick="fotgotPwd();">忘记密码</span>
            </li>
        </ul>
        <div class="sign_btn sl_skin" tapmode onclick="signBtnClick();">
            登录
        </div>

    </div>
</body>
<script src="../script/plugins/api.js"></script>
<script src="../script/plugins/jquery.min.js"></script>
<script src="../script/common.js"></script>
<script src="../script/sl_sign.js"></script>
<script>
    // 进入页面密码如果有，置空;
    let sl_pwd = $('#sl_upwd').val();
    if(sl_pwd) {
        $('#sl_pwd').val('');
    }
    apiready = function(){
        api.parseTapmode();
    }
        const yzmSign = () => {
            api.openWin({
                name: 'sl_yzmSign',
                url: 'sl_yzmSign.html',
                bounces: false,
                pageParam: {key : 'value'}
            });
        }
        const fotgotPwd = () =>{
            api.openWin({
                name: 'sl_register',
                url: 'sl_register.html',
                pageParam:{type:'忘记密码'}
            });
        }
</script>
   

</html>